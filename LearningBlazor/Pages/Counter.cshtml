@page "/counter"

<h1>Counter</h1>

<p>Current count: @currentCount</p>

<button class="btn btn-primary" onclick="@IncrementCount">Click me</button>

<p>this counter increments by: @Increment</p>

@functions {
    int currentCount = 0;

    [Parameter]
    int Increment { get; set; } = 1;

    void IncrementCount()
    {
        currentCount += Increment;
    }
}
